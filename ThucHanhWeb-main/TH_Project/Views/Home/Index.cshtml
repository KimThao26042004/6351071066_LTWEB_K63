﻿@model TH_Project.ViewModel.HomeVM

<style>
    .category_section {
        display: flex;
        flex-direction: row; /* Hiển thị theo hàng ngang */
        padding: 20px;
    }

    .cate_pick {
        width: 30%; /* Chiếm 30% chiều rộng */
        margin: 20px;
    }

    .category-list {
        list-style-type: none; /* Bỏ dấu đầu dòng */
        padding: 0; /* Bỏ padding mặc định */
    }

    .category-item {
        margin-bottom: 10px; /* Khoảng cách giữa các mục */
    }

    .img-box {
        width: 100%;
        height: auto;
    }

    .card-img-top {
        width: 338px; /* Đặt chiều rộng của tất cả các ảnh */
        height: 220px; /* Đặt chiều cao của tất cả các ảnh */
        object-fit: cover; /* Tự động điều chỉnh ảnh để giữ nguyên tỷ lệ, không bị biến dạng */
    }
</style>




<section>
    <div class="img-box">
        <img src="~/Content/images/slide.jpg" alt="" class="img-box">
    </div>

</section>
<!-- end slider section -->

<section class="category_section layout_padding" style="display: flex;">

    <div class="cate_pick">
        <h3>Các loại xe</h3>
        <ul class="category-list">
            @foreach (var item in Model.LoaiXe)
            {
                <li class="category-item">
                    @Html.ActionLink(item.TenLoaiXe, "Index", "Product", new { idCD = item.MaLX }, null)

                </li>
            }
        </ul>

        <h3>Nhà phân phối</h3>
        <ul class="category-list">
            @foreach (var item in Model.NhaPhanPhoi)
            {
                <li class="category-item">
                    @Html.ActionLink(item.TenNPP, "Index", "Product", new { idNXB = item.MaNPP }, null)

                </li>
            }
        </ul>
    </div>

    <div class="container" style="text-align: center;">
        <h3 style="color: darkred">SẢN PHẨM MỚI</h3>
        <div class="row">
            @foreach (var item in Model.XeGanMay)
            {
                <div class="col-md-4 mb-4">
                    <!--  sử dụng Url.Content để chỉ ra đúng đường dẫn -->
                    <a href="@Url.Action("ProductDetail", "Product", new { id = item.MaXe })" class="item card text-center" style="text-decoration: none;">
                        <!-- Thêm Url.Content để đảm bảo đường dẫn chính xác -->
                        <img src="@Url.Content("~/Content/images/" + item.Anhbia)" class="card-img-top" alt="@item.TenXe" />
                        <div class="card-body">
                            <h5 class="card-title">@item.TenXe</h5>
                            <p class="card-text">
                                @String.Format("{0:N0}", item.Giaban) VND
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>



    </div>

</section>

<!-- catagory section -->
<!-- end about section -->
