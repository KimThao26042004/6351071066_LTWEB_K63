﻿@model TH_Project.ViewModel.HomeVM
@using PagedList.Mvc


<style>
    .category_section {
        display: flex;
        flex-direction: row; /* Hiển thị theo hàng ngang */
        padding: 20px;
    }

    .cate_pick {
        width: 30%; /* Chiếm 30% chiều rộng */
        margin: 20px;
    }

    .category-list {
        list-style-type: none; /* Bỏ dấu đầu dòng */
        padding: 0; /* Bỏ padding mặc định */
    }

    .category-item {
        margin-bottom: 10px; /* Khoảng cách giữa các mục */
    }

    .img-box {
        width: 100%;
        height: auto;
    }

    .card-img-top {
        width: 338px; /* Đặt chiều rộng của tất cả các ảnh */
        height: 220px; /* Đặt chiều cao của tất cả các ảnh */
        object-fit: cover; /* Tự động điều chỉnh ảnh để giữ nguyên tỷ lệ, không bị biến dạng */
    }

/*Pagelist*/
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .pagination {
        display: flex;
        list-style-type: none;
        padding: 0;
    }

    .pagination li {
        margin: 0 5px;
    }

    .pagination li a, .pagination li span {
        display: block;
        padding: 8px 12px;
        color: #007bff;
        border: 1px solid #ddd;
        border-radius: 4px;
        text-decoration: none;
    }

    .pagination li a:hover, .pagination li.active span {
        background-color: #007bff;
        color: #fff;
        border-color: #007bff;
    }
</style>




<section>
    <div class="img-box">
        <img src="~/Content/images/slide.jpg" alt="" class="img-box">
    </div>

</section>
<!-- end slider section -->

<section class="category_section layout_padding" style="display: flex;">

    <div class="cate_pick">
        <h3>Các loại xe</h3>
        <ul class="category-list">
            @foreach (var item in Model.LoaiXe)
            {
                <li class="category-item">
                    @Html.ActionLink(item.TenLoaiXe, "Index", "Product", new { idCD = item.MaLX }, null)

                </li>
            }
        </ul>

        <h3>Nhà phân phối</h3>
        <ul class="category-list">
            @foreach (var item in Model.NhaPhanPhoi)
            {
                <li class="category-item">
                    @Html.ActionLink(item.TenNPP, "Index", "Product", new { idNXB = item.MaNPP }, null)

                </li>
            }
        </ul>
    </div>

    <div class="container" style="text-align: center;">
        <h3 style="color: darkred">SẢN PHẨM MỚI</h3>
        <div class="row">
            @foreach (var item in Model.XeGanMay)
            {
                <div class="col-md-4 mb-4">
                    <!--  sử dụng Url.Content để chỉ ra đúng đường dẫn -->
                    <a href="@Url.Action("ProductDetail", "Product", new { id = item.MaXe })" class="item card text-center" style="text-decoration: none;">
                        <!-- Thêm Url.Content để đảm bảo đường dẫn chính xác -->
                        <img src="@Url.Content("~/Content/images/" + item.Anhbia)" class="card-img-top" alt="@item.TenXe" />
                        <div class="card-body">
                            <h5 class="card-title">@item.TenXe</h5>
                            <p class="card-text">
                                @String.Format("{0:N0}", item.Giaban) VND
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>
        <div class="pagination-container">
            @Html.PagedListPager(Model.XeGanMay, page => Url.Action("Index", new { page }), new PagedListRenderOptions
            {
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                Display = PagedListDisplayMode.IfNeeded,
                DisplayPageCountAndCurrentLocation = false,
                DisplayEllipsesWhenNotShowingAllPageNumbers = true,
                MaximumPageNumbersToDisplay = 5,
                LinkToFirstPageFormat = "Trang đầu",
                LinkToPreviousPageFormat = "Trang trước",
                LinkToNextPageFormat = "Trang sau",
                LinkToLastPageFormat = "Trang cuối",
                ClassToApplyToFirstListItemInPager = "page-item",
                ClassToApplyToLastListItemInPager = "page-item"
            })
        </div>
    </div>





</section>

<!-- catagory section -->
<!-- end about section -->
